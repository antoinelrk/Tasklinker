{% extends 'auth.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<div class="auth-register-wrapper">
    <h1>Register</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name, 'Nom') }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.first_name, 'Prénom') }}
        {{ form_widget(form.first_name) }}
        {{ form_errors(form.first_name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'E-Mail') }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-flex">
        <div class="form-group">
            {{ form_label(form.password.first, 'Mot de passe') }}
            {{ form_widget(form.password.first) }}
            {{ form_errors(form.password.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password.second, 'Confirmation') }}
            {{ form_widget(form.password.second) }}
            {{ form_errors(form.password.second) }}
        </div>
    </div>

    <button type="submit">
        Continuer
    </button>

    {{ form_end(form) }}

    <p class="register-callback">
        <a href="{{ path('app_login') }}">Vous avez déjà un compte ?</a>
    </p>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ task.getProject().getName() }}{% endblock %}

{% block body %}
<main>
    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <h1>{{ task.getTitle() }}</h1>
        </div>
    </header>

    <div id="content">
        {{ form_start(form) }}
            <div>{{ form_errors(form) }}</div>
            <div>{{ form_row(form.title) }}</div>
            <div>{{ form_row(form.body) }}</div>
            <div>{{ form_row(form.state) }}</div>
            <div>{{ form_row(form.likely_end_at) }}</div>
            <div>{{ form_row(form.User) }}</div>
            <button type="submit" class="button button-submit">Continuer</button>
            {% if app.user.isAdmin %}
                <a href="{{ url('task.delete', { task: task.getId() }) }}" class="delete-task">Supprimer la t√¢che</a>
            {% endif %}
        {{ form_end(form) }}
    </div>
</main>
{% endblock %}
